<h1>Show User</h1>

<ul>

  <li>
    <strong>Username:</strong>
    <%= @user.username %>
  </li>

  <li>
    <strong>Slack user:</strong>
    <%= @user.slack_user_id %>
  </li>

  <li>
    <strong>Image url:</strong>
    <%= @user.image_url %>
